# Highscore API security configuration (placeholders only)
# Copy to .env in your server environment and set real values as needed.

# Comma-separated explicit origin allowlist for browser access.
# Examples:
# HIGHSCORE_ALLOWED_ORIGINS=https://example.com
# HIGHSCORE_ALLOWED_ORIGINS=http://localhost:8080,https://example.com
HIGHSCORE_ALLOWED_ORIGINS=http://localhost:8080

# Score plausibility bounds
HIGHSCORE_SCORE_MIN=1
HIGHSCORE_SCORE_MAX=1000000
HIGHSCORE_MAX_SCORE_DELTA=200000

# Freshness / replay constraints
HIGHSCORE_MAX_TIMESTAMP_SKEW_SECONDS=30
HIGHSCORE_NONCE_TTL_SECONDS=120
HIGHSCORE_SESSION_TTL_SECONDS=180

# Rate limiting (submit endpoint)
HIGHSCORE_RATE_LIMIT_WINDOW_SECONDS=60
HIGHSCORE_RATE_LIMIT_MAX_REQUESTS=10
